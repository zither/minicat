<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:logo">@drawable/ic_logo</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:backgroundSplit">@drawable/actionbar_background</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarStyleDark" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:logo">@drawable/ic_logo</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:backgroundSplit">@drawable/actionbar_background</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle</item>
    </style>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
    </style>

    <style name="AppTheme.Dark" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:actionBarStyle">@style/ActionBarStyleDark</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
    </style>

    <style name="AppTheme.WhiteBg">
        <item name="android:windowBackground">@drawable/ui_background</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

</resources>